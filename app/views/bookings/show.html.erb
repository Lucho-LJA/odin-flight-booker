<div class="section">
    <div class="box box-top">
        <div class="container2">
            <div class="title is-2">Ticket: <%= @booking.confirmation_number %></div>
            <div class="head1">
                <p>DEP:<%=@flight.departure_airport.code%></p>
                <p>DEST:<%=@flight.arrival_airport.code%></p>
                <p>DATE: <%=DateTime.parse(@flight.start_datetime.to_s).strftime("%F %H:%M")%> </p>
            </div>
             <div class="body-ticket">
                <div class="title is-5">Passengers:</div>
                <% @passenger.each do |pass| %>
                    <div class="box">
                        <div class="field">
                            <div class="control">
                            Name: <%= pass.name%> - Email: <%= pass.email%>
                            </div>
                        </div>
                    </div>
                <% end %>
             </div>
            
        
        </div>
    </div>
</div>