<div class="title is-1">Search Ticket</div>
<div class="title is-2">
<div class="box">
<%= form_with url: bookings_path, method: :get do |f| %>
    <div class="columns">
        <div class="column ">
            <div class="media-content">
                <div class="field">
                    <div class="control">
                        <%= f.label :option, "Search for:" %>
                        <%= f.select :option, ["Email","Ticket"],requride: true, value:"Email" %>
                    </div>
                </div>
            </div>  
        </div>
        <div class="column">
            <div class="media-content">
                <div class="field">
                    <div class="control">
                        <%= f.text_field :opc_find, requride:true %>
                    </div>
                </div>
            </div> 
        </div>
    
        <div class="column">
            <div class="media-content">
                <div class="field">
                    <div class="control">
                        <%= f.submit "Search", class: "button is-info" %>
                    </div>
                </div>
            </div> 
        </div>
    </div>
<% end %>
</div>
</div>
