<% if form_consults.any? %>
    <div class="title is-1">Available Tickets</div>
    <% form_consults.each do |consult|%>
        <div class="box">
            <div class="field">
                <div class="control">
                    <strong> Ticket: </strong>
                    <p><%= consult.confirmation_number %></p>
                </div>
            </div>

            <div class="field">
                <div class="control">
                    <%= form_with(url: "bookings/show", method: "get")  do |f| %>
                        <%= f.hidden_field :id, value: consult.id %>
                        <%= f.submit "View", class: "button is-info" %>
                    <% end %>
                </div>
            </div>
        </div>
    <% end %>
<% else %>
    <div class="title is-3">Sorry, there aren't Tickets</div>
<% end %>
