<div class="section">
    <div class="container1">
        <div class="title is-2">Fill Out The Passengers Data</div>
        <%= form_with model: @booking, url: bookings_create_path do |form| %>
            <%= form.hidden_field :flight_id, value:  @booking1.flight_id %>
            <%= form.hidden_field :tickets, value:  @booking1.tickets %>
            <%= form.hidden_field :confirmation_number, value: SecureRandom.urlsafe_base64(6) %>
            <%= form.fields_for :passengers do |f| %>
                <div class="box">
                    <div class="field">
                        <div class="control">
                            <%= f.label :name, "Name:" %>
                            <%= f.text_field :name %>
                        </div>
                        <div class="control">
                            <%= f.label :email, "Email:" %>
                            <%= f.text_field :email %>
                        </div>
                    </div>
                </div>
            <% end %>
            <div class="box">
                <%= link_to 'Cancel', root_path, class:"button is-dark" %>
                <%= form.submit "Reserve", class: "button is-info" %>
            </div>
        <% end %>
    </div>
</div>

